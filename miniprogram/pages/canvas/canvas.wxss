/* CSS的选择器排列顺序按WXML标签中类出现顺序来的 */
.card_wrap {
    position: absolute;
    width: 100%;
    height: 100%;
  }
  .cards{
    display: flex;
  }
  
  .card_image{
    margin-top: 15rpx;
    margin-left: 15rpx;
    border-radius: 20rpx;
    width: 720rpx;
    height: 1000rpx;
    box-shadow: 0rpx 10rpx 30rpx 10rpx rgba(46, 46, 46, 0.102);
    flex-direction: row;
  }
  
  .btn{
    width: 720rpx;
    height:120rpx;
    margin-top: 20rpx;
    margin-bottom: 80px;
    margin-left: 15rpx ;
    border-radius: 20rpx;
    display: flex;
    background-color: rgb(255, 255, 255);
    box-shadow: 30rpx 10rpx 10rpx 10rpx #5555551A;
  }
  
  .index_btn {
    margin-top: 0rpx;
    margin-left: 0rpx;
    width: 720rpx;
    height: 120rpx;
    border-radius: 20rpx;
    color: rgb(82, 82, 82);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    background-color: rgb(255, 255, 255);
  }
  
  
  .hover{
    margin-top: 0rpx;
    margin-left: 0rpx;
    width: 720rpx;
    height: 120rpx;
    border-radius: 20rpx;
    color: rgb(82, 82, 82);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    background-color: rgb(206, 206, 206);
  }
  .btn_icon{
    margin-right:32rpx;
    width: 48rpx;
    height: 48rpx;
  }
  
  .footer{
    display: flex;
    justify-content:center;
    align-items:flex-end;
    color: #999999
  }
  
  