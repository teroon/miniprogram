

.big-photo-list {
  position: absolute;
  margin-top: 50rpx;
  width: 100%;
  height: 3600rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  background: rgb(240, 240, 240);
  position: absolute;

}

.big-photo-item {
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0rpx 10rpx 30rpx 10rpx rgba(46, 46, 46, 0.102);
}

.photo {
  width: 270rpx;
  height: 270rpx;
  border-radius: 10rpx;

}

.tou-name {
  display: block;
  margin-top: 5rpx;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
